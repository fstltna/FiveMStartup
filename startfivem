my $LUGDUNONDIR = "/root/lugdunon";
my $SCREENCMD = "/usr/bin/screen";

# No changes below here...

my $startpath = $ENV{'PATH'};
my $newpath = "$LUGDUNONDIR/exec:$startpath";
my $exists = "";

# Set ENV vars
$ENV{'PATH'} = $newpath;
$ENV{'TERM'} = "xterm-256color";

my $running=`ps ax|grep net.lugdunon.Server|grep -v grep`;

# check if Lugdunon process is running
if ($running ne "")
{
	print ("Startupscript already running...\n");
	exit (0);
}

while (-1)
{
	chdir $LUGDUNONDIR;
	# check if Lugdunon process is running
	$running=`ps ax|grep net.lugdunon.Server|grep -v grep`;
	if ($running eq "")
	{
		print "Lugdunon not running\n";
		# See if they want the server started
		if (! -f "$LUGDUNONDIR/nostart")
		{
			# The Log Entry
			my $datestring = localtime();
			my $TIME="Lugdunon Down, Restarting: $datestring";
			open(OUTF, ">>$LUGDUNONDIR/LugdunonScreen.log") || die "Unable to open $LUGDUNONDIR/LugdunonScreen.log for appending";
			print (OUTF "$TIME\n");
			close($OUTF);
			chdir $LUGDUNONDIR;
			print "Starting screen process\n";
			system("$SCREENCMD -fa -S Lugdunon -d -U -m ./run.sh");
		}
	}
	# Sleep for 1 minute before checking again
	sleep(60);
}
exit(0);
